<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_board_edit">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_sub_bar_gray"
            app:titleTextColor="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar">

        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:id="@+id/ibtn_board_edit"
                     android:background="@drawable/background_corner"
                     android:src="@drawable/btn_back_toolbar"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="게시물 수정"
                  android:textColor="#ffffff"
                  android:textSize="28sp"
                  android:layout_marginLeft="30dp"
        />
    </androidx.appcompat.widget.Toolbar>

    <EditText android:layout_width="match_parent"
              android:layout_height="50dp"
              android:hint="제목"
              android:id="@+id/edit_text_board_edit_title"
              android:textSize="20sp"
    />

    <Spinner android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:autofillHints="카테고리를 선택하세요."
             android:id="@+id/spinner_board_edit_category"
             android:layout_margin="10dp"
    />


    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:id="@+id/action_bold_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_format_bold_48"
                        android:background="#ffffff"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="굵게"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />

            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:id="@+id/action_italic_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#ffffff"
                        android:src="@drawable/ic_baseline_format_italic_48"
                        android:text="drawable/italic" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="기울게"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>


            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:id="@+id/action_underline_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#ffffff"

                        android:src="@drawable/ic_baseline_format_underlined_48"
                        android:text="/underline" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="밑줄"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">

                <ImageButton
                        android:background="#ffffff"

                        android:id="@+id/action_heading1_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_format_size_48"
                        android:text="h1" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="글 크게"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">

                <ImageButton
                        android:background="#ffffff"

                        android:id="@+id/action_heading6_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_format_size_48"
                        android:text="h6" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="글 작게"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:background="#ffffff"

                        android:id="@+id/action_txt_color_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_color_lens_48"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="글색"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">

                <ImageButton

                        android:background="#ffffff"
                        android:id="@+id/action_align_left_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_format_align_left_48"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="왼쪽"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:background="#ffffff"
                        android:id="@+id/action_align_center_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_format_align_center_48"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="가운데"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:background="#ffffff"
                        android:id="@+id/action_align_right_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_format_align_right_48"
                        android:text="/justify_right"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="오른쪽"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:background="#ffffff"
                        android:id="@+id/action_insert_image_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_image_48" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="이미지"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">

                <ImageButton
                        android:background="#ffffff"
                        android:id="@+id/action_insert_video_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_video_call_48"
                        android:text="/video" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="동영상"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

            <!--            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"-->
            <!--                          android:orientation="vertical">-->
            <!--            <ImageButton-->
            <!--                    android:background="#ffffff"-->
            <!--                    android:id="@+id/action_insert_youtube"-->
            <!--                    android:layout_width="48dp"-->
            <!--                    android:layout_height="48dp"-->
            <!--                    android:src="@drawable/ic_baseline_youtube_library_48"-->
            <!--                    android:text="/youtube" />-->
            <!--                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"-->
            <!--                          android:text="유튜브"-->
            <!--                          android:textSize="18sp"-->
            <!--                          android:textColor="#000000"-->
            <!--                          android:background="#ffffff"-->
            <!--                          android:gravity="center"-->
            <!--                />-->
            <!--            </LinearLayout>-->

            <LinearLayout android:layout_width="48dp" android:layout_height="70dp"
                          android:orientation="vertical">
                <ImageButton
                        android:background="#ffffff"
                        android:id="@+id/action_insert_link_board_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_link_48"
                        android:text="/insert_link" />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="링크"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:background="#ffffff"
                          android:gravity="center"
                />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/editor_board_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수 정 완 료"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/background_text_sub_bar_blue"
            android:id="@+id/btn__board_edit"
            tools:ignore="HardcodedText"/>
</LinearLayout>