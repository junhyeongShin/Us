<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TestActivity">
    <ImageView android:layout_width="match_parent" android:layout_height="200dp"
               android:id="@+id/imageView_test_img"
               android:src="@drawable/warcraft3_log"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="이미지 선택"
            android:id="@+id/btn_test_img"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/btn_test_imgupload"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:text="btn_test_imgupload"
    />

</LinearLayout>