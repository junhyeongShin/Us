<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="#40E1F5FE"
              android:layout_marginBottom="10dp"
              android:id="@+id/layout_streaming_item"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="match_parent" android:layout_height="150dp"
    android:id="@+id/imageView_streaming_item"
               android:scaleType="fitXY"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="60dp"
                                                  android:layout_height="60dp"
                                                  android:layout_marginLeft="20dp"
                                                  android:id="@+id/circleimage_streaming_userimg"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textSize="24sp"
              android:id="@+id/textview_streaming_item"
              android:textColor="#000000"
              android:text="방송 제목"
              android:gravity="center"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textSize="20sp"
              android:id="@+id/textview_streaming_username"
              android:textColor="#000000"
              android:text="유저 네임"
              android:gravity="center"
    />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>