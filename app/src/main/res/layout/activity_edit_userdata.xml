<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_edit_userdata">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_sub_bar_gray"
            app:titleTextColor="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar">
        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:id="@+id/ibtn_edit_back"
                     android:background="@drawable/background_corner"
                     android:src="@drawable/btn_back_toolbar"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="회원 정보 수정"
                  android:textColor="#ffffff"
                  android:textSize="28sp"
                  android:layout_marginLeft="30dp"
        />
    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="match_parent" android:layout_height="200dp"
    android:id="@+id/imageView_edit"
    android:src="@drawable/warcraft3_log"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/TextView_edit_id"
              android:textSize="24sp"
              android:text="TextView_edit_id"
              android:textColor="#000000"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/TextView_edit_name"
              android:textSize="24sp"
              android:text="TextView_edit_name"
              android:layout_marginTop="20dp"
              android:textColor="#000000"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/TextView_edit_detail"
              android:textSize="14sp"
              android:layout_marginTop="10dp"
              android:text="TextView_edit_detail"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="프로필 수정"
            android:id="@+id/btn_edit_profile"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
    />
    <TextView
            android:textSize="24sp"
            android:background="@drawable/background_text_sub_bar_gray"
            android:textColor="#ffffff"
            android:text="기존 비밀번호"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/edittext_edit_old_pw"
              android:hint="기본 비밀번호를 입력하세요."
              android:inputType="textPassword"
              android:textSize="20sp"

    />
    <TextView
            android:textSize="24sp"
            android:background="@drawable/background_text_sub_bar_gray"
            android:textColor="#ffffff"
            android:text="새로운 비밀번호"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/edittext_edit_new_pw"
              android:hint="변경할 비밀번호를 입력하세요."
              android:inputType="textPassword"
              android:textSize="20sp"

    />
    <TextView
            android:textSize="24sp"
            android:background="@drawable/background_text_sub_bar_gray"
            android:textColor="#ffffff"
            android:text="새로운 비밀번호 확인"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/edittext_edit_new_pw_check"
              android:hint="변경할 비밀번호를 다시 입력하세요."
              android:inputType="textPassword"
              android:textSize="20sp"

    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:id="@+id/btn_edit_password"
            android:textSize="24sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_gravity="right"
    />


</LinearLayout>