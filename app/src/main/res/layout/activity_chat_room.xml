<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_chat_room">

    <TextView android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_weight="1"
              android:id="@+id/text_test_for_chat"
              android:text="msg"
    />

    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
    android:id="@+id/edit_text_chat_room"
              android:layout_weight="1"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/btn_send_msg_chat_room"
            android:text="보내기"
    />
    </LinearLayout>


</LinearLayout>