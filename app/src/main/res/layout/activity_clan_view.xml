<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        tools:context=".Activity_clan_view">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_sub_bar_gray"
            app:titleTextColor="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >


        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:id="@+id/ibtn_clan_view_back"
                     android:background="@drawable/background_corner"
                     android:src="@drawable/btn_back_toolbar"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="클랜 타이틀"
                  android:textColor="#ffffff"
                  android:layout_weight="1"
                  android:id="@+id/textview_clan_view_title"
                  android:textSize="28sp"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_marginLeft="30dp"
        />
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/ibtn_clan_setting"
                     android:background="@drawable/background_text_sub_bar_gray"
                     android:src="@drawable/ic_baseline_settings_48"
                     android:layout_gravity="right"
        />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
<ImageView android:layout_width="match_parent" android:layout_height="200dp"
            android:id="@+id/imageView_clan_view"
           android:layout_gravity="center"
           android:src="@drawable/warcraft3_log"
           android:scaleType="fitXY"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="#000000"
              android:textSize="24sp"
              android:text="클 랜 소 개"
              android:id="@+id/textview_clan_view_intro"
              android:layout_weight="1"
              android:gravity="center"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="@drawable/background_text_sub_bar_blue"
              android:textColor="#ffffff"
              android:textSize="24sp"
              android:text="공 지 사 항"
              android:paddingHorizontal="10dp"
              android:gravity="center"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/item_1_clan_view"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">


                <TextView
                        android:text="title title title title title title title"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:id="@+id/TextView_clan_itemView_title"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                        android:text="작성자"
                        android:textSize="20sp"
                        android:id="@+id/TextView_1_clan_View_writer"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                <TextView
                        android:text="create_time"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_1_clan_View_time"
                        android:layout_gravity="right"/>
                <TextView
                        android:text=" / "
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>
                <TextView
                        android:text="views"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_1_clan_itemView_views"
                        android:layout_gravity="right"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/item_2_clan_view"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">


                <TextView
                        android:text="title title title title title title title"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:id="@+id/TextView_2_clan_itemView_title"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                        android:text="작성자"
                        android:textSize="20sp"
                        android:id="@+id/TextView_2_clan_itemView_writer"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                <TextView
                        android:text="create_time"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_2_clan_itemView_time"
                        android:layout_gravity="right"/>
                <TextView
                        android:text=" / "
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>
                <TextView
                        android:text="views"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_2_clan_itemView_views"
                        android:layout_gravity="right"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/btn_2_clan_view_more_board"
            android:text="더 보 기 . . ."
            android:background="#ffffff"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="@drawable/background_text_sub_bar_blue"
              android:textColor="#ffffff"
              android:textSize="24sp"
              android:text="잡 담 방"
              android:paddingHorizontal="10dp"
              android:gravity="center"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/item_3_clan_view"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">


                <TextView
                        android:text="title title title title title title title"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:id="@+id/TextView_3_clan_itemView_title"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>



            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                        android:text="작성자"
                        android:textSize="20sp"
                        android:id="@+id/TextView_3_clan_itemView_writer"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                <TextView
                        android:text="create_time"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_3_clan_itemView_time"
                        android:layout_gravity="right"/>
                <TextView
                        android:text=" / "
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>
                <TextView
                        android:text="views"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_3_clan_itemView_views"
                        android:layout_gravity="right"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/item_4_clan_view"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">


                <TextView
                        android:text="title title title title title title title"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:id="@+id/TextView_4_clan_itemView_title"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                        android:text="작성자"
                        android:textSize="20sp"
                        android:id="@+id/TextView_4_clan_itemView_writer"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                <TextView
                        android:text="create_time"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_4_clan_itemView_time"
                        android:layout_gravity="right"/>
                <TextView
                        android:text=" / "
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>
                <TextView
                        android:text="views"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_4_clan_itemView_views"
                        android:layout_gravity="right"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/btn_clan_view_more_board"
            android:text="더 보 기 . . ."
            android:background="#ffffff"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:layout_marginBottom="0dp">

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clan_bottom_home"
                android:text="클랜 홈"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" android:background="@drawable/background_text_sub_bar_gray">
        </Button>
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clan_bottom_notice"
                android:text="공지"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1" android:background="@drawable/background_text_sub_bar_gray">

        </Button>
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clan_bottom_board"
                android:text="잡담"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1" android:background="@drawable/background_text_sub_bar_gray">

        </Button>
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clan_bottom_chat"
                android:text="채팅"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1" android:background="@drawable/background_text_sub_bar_blue">

        </Button>

    </LinearLayout>

</LinearLayout>