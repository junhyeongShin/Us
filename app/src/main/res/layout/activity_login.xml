<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
>

    <EditText
            android:hint="ID"
            android:textSize="24sp"
            android:layout_width="300dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edit_text_id"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_pw"
            app:layout_constraintHorizontal_bias="0.504"/>

    <Button
            android:text="로그인"
            android:textSize="20sp"

            android:textColor="#ffffff"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="122dp"
            app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_pw"
            app:layout_constraintVertical_bias="0.0" android:background="@drawable/background_text_sub_bar2"/>

    <Button
            android:text="회원가입"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/btn_signup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintVertical_bias="0.074" android:background="@drawable/background_text_sub_bar2"/>

    <EditText
            android:hint="PW"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_text_pw"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintHorizontal_bias="0.504" app:layout_constraintBottom_toTopOf="@+id/btn_login"/>

    <ImageView
            android:layout_width="186dp"
            android:layout_height="177dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="50dp" app:srcCompat="@drawable/warcraft3_log"/>
    <TextView
            android:text="Warcraft community"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>