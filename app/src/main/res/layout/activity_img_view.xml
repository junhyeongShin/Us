<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ImgViewActivity">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_sub_bar_gray"
            app:titleTextColor="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >


            <ImageButton android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:id="@+id/ibtn_img_view"
                         android:background="@drawable/background_corner"
                         android:src="@drawable/btn_back_toolbar"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="이미지 이름"
                      android:textColor="#ffffff"
                      android:layout_weight="1"
                      android:id="@+id/textview_img_view"
                      android:textSize="28sp"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:layout_marginLeft="30dp"
            />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView android:layout_width="match_parent" android:layout_height="0dp"
               android:layout_weight="1"
    android:scaleType="fitCenter"
               android:id="@+id/imageView_img_view"

    />

</LinearLayout>