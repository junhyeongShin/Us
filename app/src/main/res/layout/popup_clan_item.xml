<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <ImageView android:layout_width="191dp" android:layout_height="217dp"
               android:layout_gravity="center"
               android:scaleType="fitXY"
               android:id="@+id/imageView_clan_info"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:textSize="28sp"
              android:textColor="#000000"
              android:textStyle="bold"
              android:text="클랜이름"
              android:id="@+id/textview_title_clan_info"
              android:gravity="center"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="30dp"
                  android:layout_weight="1"
                  android:textSize="24sp"
                  android:text="카테고리"
                  android:textColor="#000000"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="24sp"
                  android:id="@+id/textview_category_clan_info"
                  android:layout_weight="1"
                  android:text="카테고리"
                  android:layout_marginRight="20dp"
                  android:textColor="#000000"
                  android:gravity="right"
        />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="30dp"
                  android:layout_weight="1"
                  android:textSize="24sp"
                  android:text="멤버 수 "
                  android:textColor="#000000"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="24sp"
                  android:id="@+id/textview_category_clan_member_count"
                  android:layout_weight="1"
                  android:text="50/100"
                  android:textColor="#000000"
                  android:layout_marginRight="20dp"

                  android:gravity="right"
        />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"
                  android:layout_weight="1"
                  android:textSize="14sp"
                  android:id="@+id/textview_clan_info_intro"
                  android:text="클랜소개"
                  android:textColor="#000000"
                  android:maxLines="3"
                  android:ellipsize="end"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_height="wrap_content">

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btn_clan_info_join"
                android:layout_gravity="center"
                android:background="@drawable/background_text_sub_bar_blue"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:text="가 입 신 청"
                android:layout_weight="1"
        />
    </LinearLayout>






</LinearLayout>