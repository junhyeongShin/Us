<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_clan_add">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_sub_bar_gray"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar">

        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:id="@+id/ibtn_clan_add_back"
                     android:background="@drawable/background_corner"
                     android:src="@drawable/btn_back_toolbar"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="클 랜 생 성"
                  android:textColor="#ffffff"
                  android:textSize="28sp"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_marginLeft="30dp"
        />
    </androidx.appcompat.widget.Toolbar>

    <ImageView android:layout_width="match_parent" android:layout_height="200dp"
                                                  android:id="@+id/imageView_clan_add"
                                                  android:src="@drawable/warcraft3_log"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="클 랜   이 미 지   선 택"
            android:id="@+id/btn_clan_add_img"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
    />

    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="클 랜   카 테 고 리"
            android:background="@drawable/background_text_sub_bar_gray"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:gravity="center"
    />

    <Spinner android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:autofillHints="카테고리를 선택하세요."
             android:id="@+id/spinner_board_add_category"
    />

    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="클 랜   이 름 "
            android:background="@drawable/background_text_sub_bar_gray"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:gravity="center"
    />

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/Edittext_clan_add_name"
              android:textSize="24sp"
              android:maxLines="1"
              android:layout_marginTop="20dp"
              android:textColor="#000000"
              android:hint="클랜 이름을 입력하세요."
    />

    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="클 랜   소 개"
            android:background="@drawable/background_text_sub_bar_gray"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:gravity="center"

    />

    <EditText android:layout_width="match_parent" android:layout_height="0dp"
              android:id="@+id/Edittext_clan_add_intro"
              android:layout_marginTop="20dp"
              android:textSize="24sp"
              android:textColor="#000000"
              android:layout_weight="1"
              android:hint="클랜 소개내용을 입력하세요."
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="클 랜 생 성"
            android:id="@+id/btn_clan_add_input"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_gravity="bottom"
    />

</LinearLayout>