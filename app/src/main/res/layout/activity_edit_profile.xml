<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_edit_profile">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_sub_bar_gray"
            app:titleTextColor="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_edit_profile">
        <ImageButton android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:id="@+id/ibtn_edit_profile_back"
                     android:background="@drawable/background_corner"
                     android:src="@drawable/btn_back_toolbar"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="프로필 수정"
                  android:textColor="#ffffff"
                  android:textSize="28sp"
                  android:layout_marginLeft="30dp"
        />
    </androidx.appcompat.widget.Toolbar>

    <ImageView android:layout_width="match_parent" android:layout_height="200dp"
               android:id="@+id/imageView_edit_profile"
               android:src="@drawable/warcraft3_log"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="프로필 이미지 선택"
            android:id="@+id/btn_edit_profile_img"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/TextView_edit_profile_id"
              android:textSize="24sp"
              android:text="TextView_edit_profile_id"
              android:textColor="#000000"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/TextView_edit_profile_name"
              android:textSize="24sp"
              android:text="TextView_edit_profile_name"
              android:layout_marginTop="20dp"
              android:textColor="#000000"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/Edittext_edit_profile_name"
              android:textSize="24sp"
              android:layout_marginTop="20dp"
              android:textColor="#000000"
              android:hint="변경할 닉네임을 입력하세요."
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/TextView_edit_profile_detail"
              android:textSize="14sp"
              android:layout_marginTop="10dp"
              android:text="TextView_edit_profile_detail"
    />
    <EditText android:layout_width="match_parent" android:layout_height="100dp"
              android:id="@+id/Edittext_edit_profile_intro"
              android:textSize="18sp"
              android:layout_marginTop="20dp"
              android:textColor="#000000"
              android:hint="변경할 소개내용을 입력하세요."
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="프로필 수정 완료"
            android:id="@+id/btn_edit_profile_end"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
    />

</LinearLayout>