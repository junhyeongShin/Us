<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".Popup_board_link">

<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
          android:text="링크를 입력하세요"
          android:textColor="#ffffff"
          android:textSize="24sp"
          android:gravity="center"
          android:background="@drawable/background_text_sub_bar_gray"

/>
<EditText android:layout_width="match_parent" android:layout_height="wrap_content"
          android:hint="http://example.com/link"
          android:textSize="20sp"
          android:id="@+id/edit_text_popup_link"
/>
<Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="링크 입력"
            android:textSize="20sp"
            android:background="@drawable/background_text_sub_bar_blue"
            android:textColor="#ffffff"
        android:id="@+id/btn_popup_link"
/>



</LinearLayout>