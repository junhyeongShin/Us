<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        tools:context="com.meditaion.play.data.Sign"-->

    <Button
            android:text="회 원 가 입"
            android:textSize="30sp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/btn_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_text_sub_bar2"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginBottom="50dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_text_pw_signup"
            android:hint="PW : 8자 이상, 숫자, 특수문자"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.305" app:layout_constraintHorizontal_bias="0.504"/>
    <EditText
            android:hint="NickName"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_name_signup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:textColor="#ffffff"
            android:text="중복확인"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_id_check"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/edit_text_id_signup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.139"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_text_sub_bar2"
            app:layout_constraintHorizontal_bias="0.407"/>
    <EditText
            android:id="@+id/edit_text_id_signup"
            android:hint="ID"
            android:layout_width="211dp"
            android:layout_height="49dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_pw_signup"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_text_pwcheck_signup"
            android:hint="PW 재확인"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_pw_signup"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.004" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="보기"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/background_corner"
            android:layout_width="96dp"
            android:layout_height="26dp"
            android:id="@+id/btn_agr_service"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="240dp"/>

    <Button
            android:text="보기"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/background_corner"
            android:layout_width="96dp"
            android:layout_height="26dp"
            android:id="@+id/btn_agr_location"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"
    />
    <Button
            android:text="보기"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/background_corner"
            android:layout_width="96dp"
            android:layout_height="26dp"
            android:id="@+id/btn_agr_privacy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp" android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="200dp"/>
    <CheckBox
            android:text="전체 동의"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_all"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="280dp"/>

    <CheckBox
            android:text="[필수] 개인정보 취급방침"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_privacy"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="200dp"/>

    <CheckBox
            android:text="[선택] 위치 정보 이용 약관"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_location"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"/>

    <CheckBox
            android:text="[필수] 서비스 이용 약관"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_service"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="240dp"/>
    <TextView
            android:text="회 원 가 입"
            android:textSize="30sp"
            android:layout_width="207dp"
            android:layout_height="39dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


</androidx.constraintlayout.widget.ConstraintLayout>